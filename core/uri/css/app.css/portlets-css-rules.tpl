.portlet { background-color: #eee; }

.portlet.radius { border-radius: 5px; }

.portlet .symbol .icon { padding:1.25rem; font-size: 2rem; line-height: 3.25rem; color: #fff; background-color: #ddd;
    text-align: center; }
    
.portlet.radius .symbol .icon { display: block; border-radius: 5px 0px 0px 5px; }

.portlet .value { padding: 1rem; padding-top: 1.25rem; }

.portlet .value h3 { font-size: 1.5rem; margin: 0; text-transform: uppercase; }

.portlet .value h3 a { color: #999; }

.portlet .value .subheader { color: #AAA; }

.portlet h1 { font-size: 1.5rem; color #999; text-align: center; background-color: #999;
    padding: 1rem; color: #fff; text-transform: uppercase; }

.portlet.radius h1 { border-radius: 5px 5px 0px 0px; }

.portlet .icon-bar { background: none; }

.portlet .icon-bar >* { padding: 0; }

.portlet .icon-bar >* i { font-size: 1.5rem; }

.portlet .icon-bar>a.active, .portlet .icon-bar>a:hover { background: #ddd; }

.portlet .icon-bar .has-tip, .portlet .icon-bar .has-tip:hover { border-bottom: none; }