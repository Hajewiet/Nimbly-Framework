.mh, .mh-normal { min-height: 20px; }

.mh-small { min-height: 10px; }

.mh-large { min-height: 50px; }

.mh-6 { min-height: 60px; }

.lh-small { line-height: 15px; }

.lh-normal, .lh { line-height: 20px; }

.lh-large { line-height: 30px; }



@media (min-width: 641px) and (max-width: 799px) {
    
    .mh, .mh-normal { min-height: 10px; }

    .mh-small { min-height: 5px; }

    .mh-large { min-height: 25px; }
    
    .lh-small { line-height: 10px; }

    .lh-normal, .lh { line-height: 15px; }

    .lh-large { line-height: 20px; }
}

@media (max-width: 640px) {

    .mh, .mh-normal { min-height: 5px; }

    .mh-small { min-height: 2px; }

    .mh-large { min-height: 12px; }
    
    .lh-small { line-height: 10px; }

    .lh-normal, .lh { line-height: 10px; }

    .lh-large { line-height: 15px; }

}