/* 
 * skin.css 
 * colors, backgrounds, borders and shadows
 */

body { color: #888; background: #f6f6f6; }

::selection { background: #87ceeb; color: #000; }

h5 { color: #666; }

code { background: #f8f8f8; border: 1px solid #ddd; }

a { color: #7ab9d4; }

a:hover { color: #517c8d; }

a:visited { color: #777; }

a:visited:hover { color: #111; }

cite { color: #bbb; }

dt, dd { color: #777; }

.white-bg { background: #fff; }

a.logo, a.logo:hover { color: deepskyblue; }

:focus {outline: none; border: 1px solid skyblue!important; }
