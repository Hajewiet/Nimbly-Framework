/* 
 * type.css (typography)
 * modular scale factor for sizing larger/smaller fonts: 1.4x
 * default font size: 14px (1 modular scale)
 * using a vertical grid size (line-height) of 20px (1.4x)
 */

body { font-size: 14px; line-height: 20px; 
    font-family: sans-serif; }

h1 { font-size: 54px; line-height: 60px; margin-top: 10px; margin-bottom: 10px; }

h2 { font-size: 27px; line-height: 40px; margin-top: 10px; margin-bottom: 0px; }

h3 { font-size: 20px; line-height: 20px; margin-top: 10px; margin-bottom: 0px; }

h4 { font-weight: bold; }

h5 { font-weight: normal; text-transform: uppercase; }

h6 { font-weight: normal; }

p, ul, ol, dl, blockquote, pre, hgroup, table, form, fieldset { 
    margin-bottom: 20px; }
    
dd { margin-bottom: 10px; }

small, sub, sup, figcaption { font-size: 10px; }

pre, code, kbd, samp { font-family: Menlo, Monaco, monospace, sans-serif; }

blockquote { margin-bottom: 20px; padding-left: 20px; font-style: italic; }




